---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Fetch all courses from Content Collection
const allCourses = await getCollection('courses');

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('vi-VN').format(price);
};
---

<BaseLayout
  title="Khóa học"
  description="Khóa học AI Marketing và Automation thực chiến. Học từ kinh nghiệm thực tế, áp dụng ngay vào công việc."
>
  <section class="py-16 lg:py-24 bg-white dark:bg-charcoal">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-16">
        <span
          class="inline-block px-3 py-1 bg-bv-red/10 text-bv-red text-xs font-semibold rounded-full mb-4"
          >KHÓA HỌC</span
        >
        <h1 class="text-3xl lg:text-4xl font-bold mb-4">Học AI Marketing từ thực chiến</h1>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Khóa học được thiết kế từ kinh nghiệm thực tế, giúp bạn áp dụng ngay vào công việc.
        </p>
      </div>

      <!-- Courses Grid -->
      {allCourses.length > 0 ? (
        <div class="grid lg:grid-cols-2 gap-8">
          {
            allCourses.map((course, index) => {
              const courseUrl = `/khoa-hoc/${course.slug}/`;
              const isFeatured = index === 0;
              const totalLessons = course.data.curriculum.reduce(
                (acc, module) => acc + module.lessons.length,
                0
              );
              const totalDuration = course.data.curriculum.reduce(
                (acc, module) => acc + (parseFloat(module.duration) || 0),
                0
              );

              return (
                <article
                  class={`group bg-gray-50 dark:bg-charcoal-light/30 border ${isFeatured ? 'border-bv-red/30 ring-2 ring-bv-red/10' : 'border-gray-200 dark:border-white/5'} rounded-2xl overflow-hidden hover:shadow-2xl transition-all`}
                >
                  {isFeatured && (
                    <div class="bg-bv-red text-white text-center py-2 text-sm font-semibold">
                      ⭐ Khóa học bán chạy nhất
                    </div>
                  )}

                  <a href={courseUrl} class="block">
                    <div class="aspect-[16/9] relative overflow-hidden">
                      <img
                        src={course.data.image}
                        alt={course.data.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                        loading="lazy"
                      />
                      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent" />
                      <div class="absolute bottom-4 left-4 right-4 flex items-center justify-between">
                        <span class="px-3 py-1 bg-white/20 backdrop-blur-sm text-white text-sm font-medium rounded-full">
                          {totalLessons} bài học
                        </span>
                        <span class="px-3 py-1 bg-white/20 backdrop-blur-sm text-white text-sm font-medium rounded-full">
                          {totalDuration} giờ
                        </span>
                      </div>
                    </div>
                  </a>

                  <div class="p-6 lg:p-8">
                    <h3 class="text-xl lg:text-2xl font-bold mb-3 group-hover:text-bv-red transition-colors">
                      <a href={courseUrl}>{course.data.title}</a>
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-6">{course.data.description}</p>

                    {/* Features */}
                    <ul class="grid grid-cols-2 gap-2 mb-6">
                      {course.data.features.slice(0, 4).map((feature) => (
                        <li class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                          <svg
                            class="w-4 h-4 text-green-500 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M5 13l4 4L19 7"
                            />
                          </svg>
                          {feature}
                        </li>
                      ))}
                    </ul>

                    {/* Price & CTA */}
                    <div class="flex items-center justify-between pt-6 border-t border-gray-200 dark:border-white/10">
                      <div>
                        {course.data.originalPrice && (
                          <div class="text-sm text-gray-400 line-through">
                            {formatPrice(course.data.originalPrice)}đ
                          </div>
                        )}
                        <div class="text-2xl font-bold text-bv-red">
                          {formatPrice(course.data.price)}đ
                        </div>
                      </div>
                      <a
                        href={courseUrl}
                        class="px-6 py-3 bg-bv-red hover:bg-bv-red-hover text-white font-semibold rounded-xl transition-all btn-glow"
                      >
                        Xem chi tiết
                      </a>
                    </div>
                  </div>
                </article>
              );
            })
          }
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400">Đang cập nhật khóa học...</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
