---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { categories, getCategoryColor, getCategoryBySlug } from '../../../data/categories';

const { category } = Astro.params;
const currentCat = getCategoryBySlug(category);

// Fetch posts for this category
const allPosts = await getCollection('posts', ({ data }) =>
  !data.draft && data.category === category
);
const posts = allPosts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// Format date helper
const formatDate = (date: Date) => {
  return date.toLocaleDateString('vi-VN', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric',
  });
};
---

<BaseLayout
  title={`${currentCat?.label || category} - Blog`}
  description={`Bài viết về ${currentCat?.label || category}. Kiến thức thực chiến cho doanh nghiệp Việt Nam.`}
>
  <section class="py-16 lg:py-24 bg-white dark:bg-charcoal">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-3xl lg:text-4xl font-bold mb-4">
          {currentCat?.icon} {currentCat?.label}
        </h1>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Tất cả bài viết trong danh mục {currentCat?.label}.
        </p>
      </div>

      <!-- Category Tabs -->
      <div class="flex flex-wrap justify-center gap-2 mb-12">
        <a
          href="/blog/"
          class="px-4 py-2 bg-gray-100 dark:bg-white/5 text-gray-700 dark:text-gray-300 text-sm font-medium rounded-full hover:bg-gray-200 dark:hover:bg-white/10 transition-colors"
        >
          Tất cả
        </a>
        {
          categories.map((cat) => (
            <a
              href={`/blog/${cat.slug}/`}
              class={`px-4 py-2 text-sm font-medium rounded-full transition-colors ${
                cat.slug === category
                  ? 'bg-bv-red text-white'
                  : 'bg-gray-100 dark:bg-white/5 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-white/10'
              }`}
            >
              {cat.icon} {cat.label}
            </a>
          ))
        }
      </div>

      <!-- Posts Grid -->
      {posts.length > 0 ? (
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            posts.map((post) => {
              const cat = getCategoryBySlug(post.data.category);
              const postUrl = `/blog/${post.data.category}/${post.slug}/`;
              return (
                <article class="group bg-gray-50 dark:bg-charcoal-light/30 border border-gray-200 dark:border-white/5 rounded-2xl overflow-hidden hover:border-bv-red/30 transition-all card-glow">
                  <a href={postUrl} class="block">
                    <div class="aspect-[16/9] relative overflow-hidden bg-gray-200 dark:bg-gray-700">
                      {post.data.image ? (
                        <img
                          src={post.data.image}
                          alt={post.data.imageAlt || post.data.title}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                          loading="lazy"
                        />
                      ) : (
                        <div class="w-full h-full flex items-center justify-center text-4xl">
                          {cat?.icon}
                        </div>
                      )}
                      <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent" />
                      <span
                        class={`absolute bottom-3 left-3 px-2 py-1 text-xs font-medium rounded ${getCategoryColor(cat?.color || 'gray')}`}
                      >
                        {cat?.icon} {cat?.label}
                      </span>
                    </div>
                  </a>
                  <div class="p-5">
                    <div class="flex items-center gap-2 mb-2 text-xs text-gray-500">
                      <span>{post.data.readingTime}</span>
                      <span>•</span>
                      <span>{formatDate(post.data.publishDate)}</span>
                    </div>
                    <h3 class="font-bold text-lg mb-2 line-clamp-2 group-hover:text-bv-red transition-colors">
                      <a href={postUrl}>{post.data.title}</a>
                    </h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                      {post.data.description}
                    </p>
                  </div>
                </article>
              );
            })
          }
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400">Chưa có bài viết nào trong danh mục này.</p>
          <a href="/blog/" class="inline-block mt-4 text-bv-red hover:underline">
            ← Xem tất cả bài viết
          </a>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
