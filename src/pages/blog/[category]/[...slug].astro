---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';
import { getCategoryBySlug, getCategoryColor } from '../../../data/categories';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: {
      category: post.data.category,
      slug: post.id
    },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await render(post);

const cat = getCategoryBySlug(post.data.category);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('vi-VN', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric',
  });
};

// Related posts (same category, excluding current)
const allPosts = await getCollection('posts', ({ data, id }) =>
  !data.draft && data.category === post.data.category && id !== post.id
);
const relatedPosts = allPosts.slice(0, 3);

// Latest posts for "C√≥ th·ªÉ b·∫°n quan t√¢m" section
const latestPosts = await getCollection('posts', ({ data, id }) =>
  !data.draft && id !== post.id
);
const recommendedPosts = latestPosts
  .sort((a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf())
  .slice(0, 4);

// Filter headings for TOC (h2 only)
const tocHeadings = headings.filter(h => h.depth === 2);

// Category color classes
const categoryColors: Record<string, { bg: string; text: string }> = {
  'ai-automation': { bg: 'bg-purple-500/10', text: 'text-purple-600 dark:text-purple-400' },
  'marketing': { bg: 'bg-blue-500/10', text: 'text-blue-600 dark:text-blue-400' },
  'content': { bg: 'bg-green-500/10', text: 'text-green-600 dark:text-green-400' },
  'quan-ly-van-hanh': { bg: 'bg-orange-500/10', text: 'text-orange-600 dark:text-orange-400' },
  'deepwork': { bg: 'bg-yellow-500/10', text: 'text-yellow-600 dark:text-yellow-400' },
  'reviews-sach': { bg: 'bg-pink-500/10', text: 'text-pink-600 dark:text-pink-400' },
};

const catColor = categoryColors[post.data.category] || { bg: 'bg-gray-500/10', text: 'text-gray-600' };
