---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { categories, getCategoryColor, getCategoryBySlug } from '../../data/categories';

// SSR-compatible pagination
const pageSize = 9;
const pageParam = Astro.params.page;
const currentPage = pageParam ? parseInt(pageParam) : 1;

const allPosts = await getCollection('posts', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const totalPosts = sortedPosts.length;
const totalPages = Math.ceil(totalPosts / pageSize);
const start = (currentPage - 1) * pageSize;
const end = start + pageSize;
const postsOnPage = sortedPosts.slice(start, end);

// Build page object for template compatibility
const page = {
  data: postsOnPage,
  currentPage,
  lastPage: totalPages,
  total: totalPosts,
  url: {
    prev: currentPage > 1 ? (currentPage === 2 ? '/blog/' : `/blog/${currentPage - 1}/`) : null,
    next: currentPage < totalPages ? `/blog/${currentPage + 1}/` : null,
  },
};

// Format date helper
const formatDate = (date: Date) => {
  return date.toLocaleDateString('vi-VN', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric',
  });
};
const getPageNumbers = () => {
  const pages: (number | string)[] = [];
  if (totalPages <= 5) {
    for (let i = 1; i <= totalPages; i++) pages.push(i);
  } else {
    pages.push(1);
    if (currentPage > 3) pages.push('...');
    for (let i = Math.max(2, currentPage - 1); i <= Math.min(totalPages - 1, currentPage + 1); i++) {
      pages.push(i);
    }
    if (currentPage < totalPages - 2) pages.push('...');
    pages.push(totalPages);
  }
  return pages;
};
---

<BaseLayout
  title={currentPage > 1 ? `Blog - Trang ${currentPage}` : 'Blog'}
  description="Bài viết về AI Marketing, Automation và Deep Work. Chia sẻ kinh nghiệm thực chiến cho doanh nghiệp Việt Nam."
>
  <section class="py-16 lg:py-24 bg-white dark:bg-charcoal">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-3xl lg:text-4xl font-bold mb-4">Blog</h1>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Kiến thức thực chiến về AI Marketing, Automation và phương pháp làm việc hiệu quả.
        </p>
      </div>

      <!-- Category Tabs -->
      <div class="flex flex-wrap justify-center gap-2 mb-12">
        <a
          href="/blog/"
          class="px-4 py-2 bg-bv-red text-white text-sm font-medium rounded-full transition-colors"
        >
          Tất cả
        </a>
        {
          categories.map((cat) => (
            <a
              href={`/blog/${cat.slug}/`}
              class="px-4 py-2 bg-gray-100 dark:bg-white/5 text-gray-700 dark:text-gray-300 text-sm font-medium rounded-full hover:bg-gray-200 dark:hover:bg-white/10 transition-colors"
            >
              {cat.icon} {cat.label}
            </a>
          ))
        }
      </div>

      <!-- Posts Grid -->
      {page.data.length > 0 ? (
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            page.data.map((post) => {
              const cat = getCategoryBySlug(post.data.category);
              const postUrl = `/blog/${post.data.category}/${post.slug}/`;
              return (
                <article class="group bg-gray-50 dark:bg-charcoal-light/30 border border-gray-200 dark:border-white/5 rounded-2xl overflow-hidden hover:border-bv-red/30 transition-all card-glow">
                  <a href={postUrl} class="block">
                    <div class="aspect-[16/9] relative overflow-hidden bg-gray-200 dark:bg-gray-700">
                      {post.data.image ? (
                        <img
                          src={post.data.image}
                          alt={post.data.imageAlt || post.data.title}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                          loading="lazy"
                        />
                      ) : (
                        <div class="w-full h-full flex items-center justify-center text-4xl">
                          {cat?.icon}
                        </div>
                      )}
                      <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent" />
                      <span
                        class={`absolute bottom-3 left-3 px-2 py-1 text-xs font-medium rounded ${getCategoryColor(cat?.color || 'gray')}`}
                      >
                        {cat?.icon} {cat?.label}
                      </span>
                    </div>
                  </a>
                  <div class="p-5">
                    <div class="flex items-center gap-2 mb-2 text-xs text-gray-500">
                      <span>{post.data.readingTime}</span>
                      <span>•</span>
                      <span>{formatDate(post.data.publishDate)}</span>
                    </div>
                    <h3 class="font-bold text-lg mb-2 line-clamp-2 group-hover:text-bv-red transition-colors">
                      <a href={postUrl}>{post.data.title}</a>
                    </h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                      {post.data.description}
                    </p>
                  </div>
                </article>
              );
            })
          }
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400">Chưa có bài viết nào.</p>
        </div>
      )}

      <!-- Pagination -->
      {totalPages > 1 && (
        <nav class="flex justify-center mt-12" aria-label="Pagination">
          <div class="flex items-center gap-2">
            {/* Previous */}
            {page.url.prev ? (
              <a
                href={page.url.prev}
                class="px-4 h-10 flex items-center justify-center rounded-lg bg-gray-100 dark:bg-white/5 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-white/10 transition-colors"
              >
                ← Trước
              </a>
            ) : (
              <span class="px-4 h-10 flex items-center justify-center rounded-lg bg-gray-100/50 dark:bg-white/5 text-gray-400 cursor-not-allowed">
                ← Trước
              </span>
            )}

            {/* Page Numbers */}
            {getPageNumbers().map((pageNum) => {
              if (pageNum === '...') {
                return <span class="text-gray-400 px-2">...</span>;
              }
              const isCurrentPage = pageNum === currentPage;
              const pageUrl = pageNum === 1 ? '/blog/' : `/blog/${pageNum}/`;
              return isCurrentPage ? (
                <span class="w-10 h-10 flex items-center justify-center rounded-lg bg-bv-red text-white font-medium">
                  {pageNum}
                </span>
              ) : (
                <a
                  href={pageUrl}
                  class="w-10 h-10 flex items-center justify-center rounded-lg bg-gray-100 dark:bg-white/5 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-white/10 transition-colors"
                >
                  {pageNum}
                </a>
              );
            })}

            {/* Next */}
            {page.url.next ? (
              <a
                href={page.url.next}
                class="px-4 h-10 flex items-center justify-center rounded-lg bg-gray-100 dark:bg-white/5 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-white/10 transition-colors"
              >
                Sau →
              </a>
            ) : (
              <span class="px-4 h-10 flex items-center justify-center rounded-lg bg-gray-100/50 dark:bg-white/5 text-gray-400 cursor-not-allowed">
                Sau →
              </span>
            )}
          </div>
        </nav>
      )}

      <!-- Page Info -->
      {totalPages > 1 && (
        <p class="text-center mt-4 text-sm text-gray-500">
          Trang {currentPage} / {totalPages} ({page.total} bài viết)
        </p>
      )}
    </div>
  </section>
</BaseLayout>
