---
import { siteConfig } from '../../data/site-config';
import { footerNavigation } from '../../data/navigation';
---

<footer class="bg-gray-100 dark:bg-charcoal-light border-t border-gray-200 dark:border-white/5">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-4">
          <img src={siteConfig.logo} alt={siteConfig.name} class="h-10 w-auto" />
        </a>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">{siteConfig.description}</p>

        <!-- Social Links -->
        <div class="flex items-center gap-3">
          <a
            href={siteConfig.social.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-white dark:bg-white/5 border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-400 hover:text-bv-red hover:border-bv-red/30 transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
              ></path>
            </svg>
          </a>
          <a
            href={siteConfig.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-white dark:bg-white/5 border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-400 hover:text-bv-red hover:border-bv-red/30 transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
          <a
            href={siteConfig.social.zalo}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-white dark:bg-white/5 border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-400 hover:text-bv-red hover:border-bv-red/30 transition-colors"
            aria-label="Zalo"
          >
            <span class="text-sm font-bold">Z</span>
          </a>
          <a
            href={siteConfig.social.youtube}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-white dark:bg-white/5 border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-400 hover:text-bv-red hover:border-bv-red/30 transition-colors"
            aria-label="YouTube"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Blog Links -->
      <div>
        <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
          Blog
        </h3>
        <ul class="space-y-3">
          {
            footerNavigation.blog.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-sm text-gray-600 dark:text-gray-400 hover:text-bv-red transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Tools Links -->
      <div>
        <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
          Tools
        </h3>
        <ul class="space-y-3">
          {
            footerNavigation.tools.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-sm text-gray-600 dark:text-gray-400 hover:text-bv-red transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- General Links -->
      <div>
        <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
          Liên kết
        </h3>
        <ul class="space-y-3">
          {
            footerNavigation.links.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-sm text-gray-600 dark:text-gray-400 hover:text-bv-red transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-200 dark:border-white/5">
    <div
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 flex flex-col sm:flex-row items-center justify-between gap-4"
    >
      <p class="text-sm text-gray-500 text-center sm:text-left">
        © 2025 {siteConfig.name} • {siteConfig.author.email} • {siteConfig.author.phone}
      </p>
      <div class="flex items-center gap-2">
        <span class="text-xs text-gray-400">Đã đăng ký Bộ Công Thương</span>
      </div>
    </div>
  </div>
</footer>
